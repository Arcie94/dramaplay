---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Admin Login - DramaPlay">
  <div class="min-h-screen bg-zinc-950 flex items-center justify-center p-4">
    <div
      class="bg-zinc-900 border border-zinc-800 p-8 rounded-xl w-full max-w-md shadow-2xl"
    >
      <h1 class="text-2xl font-bold text-white mb-2 text-center">
        Admin Access
      </h1>
      <p class="text-zinc-500 text-sm text-center mb-6">
        Please enter your credentials
      </p>

      <form id="login-form" class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-zinc-400 mb-1"
            >Username</label
          >
          <input
            type="text"
            id="username"
            class="w-full bg-black/50 border border-zinc-700 rounded-lg px-4 py-2.5 text-white focus:border-red-600 focus:outline-none transition-colors"
            placeholder="admin"
          />
        </div>
        <div>
          <label class="block text-xs font-medium text-zinc-400 mb-1"
            >Password</label
          >
          <div class="relative">
            <input
              type="password"
              id="password"
              class="w-full bg-black/50 border border-zinc-700 rounded-lg px-4 py-2.5 pr-10 text-white focus:border-red-600 focus:outline-none transition-colors"
              placeholder="••••••••"
            />
            <button
              type="button"
              onclick="togglePassword('password', this)"
              class="absolute right-3 top-1/2 -translate-y-1/2 text-zinc-400 hover:text-white transition-colors"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-5 h-5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </button>
          </div>
        </div>

        <div id="error-msg" class="text-red-500 text-xs text-center hidden">
          Invalid credentials
        </div>

        <!-- Turnstile Widget -->
        <div id="cf-turnstile" class="flex justify-center my-4"></div>

        <button
          type="submit"
          class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-2.5 rounded-lg transition-colors mt-2"
        >
          Sign In
        </button>
      </form>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById("login-form");
  const userIn = document.getElementById("username") as HTMLInputElement;
  const passIn = document.getElementById("password") as HTMLInputElement;
  const errorMsg = document.getElementById("error-msg");

  // Turnstile
  let turnstileToken = "";
  let turnstileWidgetId: any = null;

  // Load Turnstile Script dynamically if needed, or if site key is present
  async function initTurnstile() {
    try {
      const res = await fetch("/api/settings");
      const data = await res.json();

      if (data.status === "success" && data.turnstile_site_key) {
        // Determine theme based on logic or default to auto
        const theme = "dark";

        // Inject script
        const script = document.createElement("script");
        script.src =
          "https://challenges.cloudflare.com/turnstile/v0/api.js?render=explicit";
        script.async = true;
        script.defer = true;
        document.head.appendChild(script);

        script.onload = () => {
          // Bypass ready() - checks if global exists directly
          if ((window as any).turnstile) {
            turnstileWidgetId = (window as any).turnstile.render(
              "#cf-turnstile",
              {
                sitekey: data.turnstile_site_key,
                theme: theme,
                callback: function (token: string) {
                  turnstileToken = token;
                },
              }
            );
          } else {
            // Fallback to ready() if somehow not immediately available
            (window as any).turnstile.ready(() => {
              turnstileWidgetId = (window as any).turnstile.render(
                "#cf-turnstile",
                {
                  sitekey: data.turnstile_site_key,
                  theme: theme,
                  callback: function (token: string) {
                    turnstileToken = token;
                  },
                }
              );
            });
          }
        };
      }
    } catch (e) {
      console.error("Failed to init turnstile", e);
    }
  }

  initTurnstile();

  // Check if already logged in
  if (localStorage.getItem("admin_token")) {
    window.location.href = "/admin";
  }

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    errorMsg?.classList.add("hidden");

    try {
      const res = await fetch("/api/admin/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          username: userIn.value,
          password: passIn.value,
          cf_turnstile_response: turnstileToken, // Send token
        }),
      });

      const data = await res.json();

      if (res.ok && data.status === "success") {
        localStorage.setItem("admin_token", data.token);
        window.location.href = "/admin";
      } else {
        if (errorMsg) {
          errorMsg.textContent = data.message || "Login failed";
          errorMsg.classList.remove("hidden");
        }
      }
    } catch (err) {
      console.error(err);
      if (errorMsg) {
        errorMsg.textContent = "Connection error";
        errorMsg.classList.remove("hidden");
      }
    }
  });

  // --- Toggle Password Visibility ---
  (window as any).togglePassword = (
    inputId: string,
    btn: HTMLButtonElement
  ) => {
    const input = document.getElementById(inputId) as HTMLInputElement;
    if (!input) return;

    if (input.type === "password") {
      input.type = "text";
      btn.innerHTML = `
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
        </svg>
      `;
    } else {
      input.type = "password";
      btn.innerHTML = `
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
      `;
    }
  };
</script>
