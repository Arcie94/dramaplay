---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="User Management - DramaPlay">
    <div class="min-h-screen bg-black text-white p-6 pt-24">
        <div class="max-w-6xl mx-auto">
            <!-- Header -->
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="text-3xl font-bold">User Management</h1>
                    <p class="text-zinc-400 mt-2">View registered users.</p>
                </div>
                <div class="flex gap-3 items-center">
                    <div class="relative">
                        <input
                            type="text"
                            id="search-input"
                            placeholder="Search users..."
                            class="pl-10 pr-4 py-2 bg-zinc-900 border border-zinc-700 rounded-lg text-sm text-white focus:outline-none focus:border-red-600 focus:ring-1 focus:ring-red-600 w-64 transition-all"
                        />
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-4 w-4 text-zinc-500 absolute left-3 top-1/2 -translate-y-1/2"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                            ></path>
                        </svg>
                    </div>
                    <button
                        id="btn-bulk-delete"
                        class="hidden px-4 py-2 bg-red-600 hover:bg-red-700 rounded-lg text-sm text-white font-medium shadow-lg shadow-red-900/20 transition-all items-center gap-2"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="2"
                            stroke="currentColor"
                            class="w-4 h-4"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                            ></path>
                        </svg>
                        Delete Selected (<span id="selected-count">0</span>)
                    </button>
                    <a
                        href="/admin"
                        class="px-4 py-2 bg-zinc-800 hover:bg-zinc-700 rounded-lg text-sm text-white transition-colors flex items-center"
                    >
                        Back to Dashboard
                    </a>
                </div>
            </div>

            <!-- User Table -->
            <div
                class="bg-zinc-900 border border-zinc-800 rounded-xl overflow-hidden shadow-sm"
            >
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr
                                class="bg-zinc-950/50 border-b border-white/5 text-xs uppercase tracking-wider text-zinc-500 font-semibold"
                            >
                                <th class="p-4 w-10 text-center">
                                    <input
                                        type="checkbox"
                                        id="select-all"
                                        class="rounded bg-zinc-800 border-zinc-700 text-red-600 focus:ring-red-600 focus:ring-offset-zinc-900 cursor-pointer"
                                    />
                                </th>
                                <th class="p-4 w-16 text-center">ID</th>
                                <th class="p-4 w-20 text-center">Avatar</th>
                                <th class="p-4 text-left">Name</th>
                                <th class="p-4 text-left">Email</th>
                                <th class="p-4 text-center">Provider</th>
                                <th class="p-4 text-center">Joined At</th>
                                <th class="p-4 text-left">Last Watched</th>
                                <th class="p-4 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody
                            id="user-table-body"
                            class="divide-y divide-white/5 text-sm"
                        >
                            <!-- Rows injected via JS -->
                        </tbody>
                    </table>
                </div>
                <!-- Pagination -->
                <div
                    class="flex items-center justify-between p-4 border-t border-white/5 bg-zinc-900/30"
                >
                    <span id="page-info" class="text-zinc-500 text-sm"
                        >Page 1</span
                    >
                    <div class="flex gap-2">
                        <button
                            id="btn-prev"
                            class="px-3 py-1.5 bg-zinc-800 hover:bg-zinc-700 rounded-md disabled:opacity-50 text-xs font-medium transition-colors text-white"
                            >Prev</button
                        >
                        <button
                            id="btn-next"
                            class="px-3 py-1.5 bg-zinc-800 hover:bg-zinc-700 rounded-md disabled:opacity-50 text-xs font-medium transition-colors text-white"
                            >Next</button
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom Delete Modal -->
    <div
        id="delete-modal"
        class="fixed inset-0 z-50 bg-black/80 backdrop-blur-sm hidden items-center justify-center p-4 animate-in fade-in duration-200"
    >
        <div
            class="bg-zinc-900 border border-white/10 rounded-xl p-6 max-w-sm w-full shadow-2xl scale-in-95 animate-in duration-200"
        >
            <h3 id="modal-title" class="text-xl font-bold text-white mb-2">
                Delete User?
            </h3>
            <p id="modal-desc" class="text-zinc-400 mb-6 text-sm">
                Are you sure you want to delete this user? This action cannot be
                undone.
            </p>
            <div class="flex justify-end gap-3">
                <button
                    id="btn-cancel-delete"
                    class="px-4 py-2 bg-zinc-800 hover:bg-zinc-700 text-white text-sm font-medium rounded-lg transition-colors"
                >
                    Cancel
                </button>
                <button
                    id="btn-confirm-delete"
                    class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-lg shadow-lg shadow-red-900/20 transition-all"
                >
                    Delete User
                </button>
            </div>
        </div>
    </div>
</Layout>

<script>
    const API_BASE = "/api";
    const token = localStorage.getItem("admin_token");

    if (!token) {
        window.location.href = "/admin/login";
    }

    let currentPage = 1;
    let currentLimit = 15;
    let searchQuery = ""; // Search state
    let userToDeleteId: any = null; // Store ID to delete (Visual: Single or Bulk Logic)
    let selectedIds: Set<any> = new Set(); // Store selected IDs
    let isBulkDelete = false; // Flag for modal mode

    const tableBody = document.getElementById("user-table-body");
    const pageInfo = document.getElementById("page-info");
    const deleteModal = document.getElementById("delete-modal");
    const btnCancel = document.getElementById("btn-cancel-delete");
    const btnConfirm = document.getElementById("btn-confirm-delete");

    const selectAllCheckbox = document.getElementById(
        "select-all",
    ) as HTMLInputElement;
    const btnBulkDelete = document.getElementById("btn-bulk-delete");
    const selectedCountSpan = document.getElementById("selected-count");
    const modalTitle = document.getElementById("modal-title");
    const modalDesc = document.getElementById("modal-desc");

    // --- Modal Logic ---
    function showModal(id: any = null, bulk = false) {
        isBulkDelete = bulk;
        userToDeleteId = id; // If bulk, this might be null or unused

        if (deleteModal) {
            // Update Text
            if (modalTitle && modalDesc) {
                if (bulk) {
                    modalTitle.textContent = `Delete ${selectedIds.size} Users?`;
                    modalDesc.textContent = `Are you sure you want to delete ${selectedIds.size} users? This action cannot be undone.`;
                } else {
                    modalTitle.textContent = "Delete User?";
                    modalDesc.textContent =
                        "Are you sure you want to delete this user? This action cannot be undone.";
                }
            }
            deleteModal.classList.remove("hidden");
            deleteModal.classList.add("flex");
        }
    }

    function hideModal() {
        userToDeleteId = null;
        if (deleteModal) {
            deleteModal.classList.add("hidden");
            deleteModal.classList.remove("flex");
        }
    }

    if (btnCancel) {
        btnCancel.addEventListener("click", hideModal);
    }

    if (btnConfirm) {
        btnConfirm.addEventListener("click", async () => {
            // BULK DELETE
            if (isBulkDelete) {
                if (selectedIds.size === 0) return;
                const ids = Array.from(selectedIds);
                hideModal();

                // Simple concurrency: Delete one by one (Promise.allSettled)
                // In a real production app with thousands, you'd want a proper bulk endpoint.
                // For < 100 items, this is fine.
                const promises = ids.map((id) =>
                    fetch(`${API_BASE}/admin/users/${id}`, {
                        method: "DELETE",
                        headers: { Authorization: token || "" },
                    }),
                );

                await Promise.allSettled(promises);

                // Clear selection and refresh
                selectedIds.clear();
                updateSelectionUI();
                fetchUsers(currentPage);
                return;
            }

            // SINGLE DELETE
            if (!userToDeleteId) return;

            try {
                const res = await fetch(
                    `${API_BASE}/admin/users/${userToDeleteId}`,
                    {
                        method: "DELETE",
                        headers: { Authorization: token || "" },
                    },
                );

                const json = await res.json();
                if (json.status === "success") {
                    fetchUsers(currentPage);
                    hideModal();
                } else {
                    alert("Failed to delete: " + json.message);
                    hideModal();
                }
            } catch (err) {
                console.error(err);
                alert("Network error");
                hideModal();
            }
        });
    }

    // click outside closes modal
    if (deleteModal) {
        deleteModal.addEventListener("click", (e) => {
            if (e.target === deleteModal) hideModal();
        });
    }

    // Expose showModal as the global deleteUser function called by HTML
    (window as any).deleteUser = (id: any) => {
        showModal(id, false);
    };

    // --- Bulk Selection Logic ---
    function toggleAll(checked: boolean) {
        const checkboxes = document.querySelectorAll(".user-select");
        checkboxes.forEach((cb: any) => {
            cb.checked = checked;
            const id = parseInt(cb.value);
            if (checked) selectedIds.add(id);
            else selectedIds.delete(id);
        });
        updateSelectionUI();
    }

    function updateSelectionUI() {
        if (selectedCountSpan)
            selectedCountSpan.textContent = selectedIds.size.toString();

        if (selectedIds.size > 0) {
            btnBulkDelete?.classList.remove("hidden");
            btnBulkDelete?.classList.add("flex");
        } else {
            btnBulkDelete?.classList.add("hidden");
            btnBulkDelete?.classList.remove("flex");
            // Also uncheck select-all if it was checked
            if (selectAllCheckbox) selectAllCheckbox.checked = false;
        }
    }

    if (selectAllCheckbox) {
        selectAllCheckbox.addEventListener("change", (e: any) => {
            toggleAll(e.target.checked);
        });
    }

    if (btnBulkDelete) {
        btnBulkDelete.addEventListener("click", () => {
            showModal(null, true);
        });
    }

    // --- Search Logic ---
    const searchInput = document.getElementById(
        "search-input",
    ) as HTMLInputElement;
    let searchTimeout: any;

    if (searchInput) {
        searchInput.addEventListener("input", (e: any) => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                searchQuery = e.target.value;
                currentPage = 1; // Reset to page 1 on new search
                fetchUsers(currentPage);
            }, 500); // 500ms debounce
        });
    }

    async function fetchUsers(page = 1) {
        try {
            const queryParams = new URLSearchParams({
                page: page.toString(),
                limit: currentLimit.toString(),
                search: searchQuery,
            });

            const res = await fetch(
                `${API_BASE}/admin/users?${queryParams.toString()}`,
                {
                    headers: { Authorization: token || "" },
                },
            );

            if (res.status === 401) {
                window.location.href = "/admin/login";
                return;
            }

            const json = await res.json();
            if (json.status === "success") {
                renderTable(json.data);
                if (pageInfo)
                    pageInfo.textContent = `Page ${json.page} of ${Math.ceil(json.total / json.limit)}`;
                currentPage = json.page;

                // Update button states
                const prev = document.getElementById(
                    "btn-prev",
                ) as HTMLButtonElement;
                const next = document.getElementById(
                    "btn-next",
                ) as HTMLButtonElement;
                if (prev) prev.disabled = currentPage <= 1;
                if (next)
                    next.disabled =
                        currentPage >= Math.ceil(json.total / json.limit);
            }
        } catch (err) {
            console.error("Failed to fetch users:", err);
        }
    }

    function renderTable(users: any[]) {
        if (!tableBody) return;

        // Reset header checkbox state on page load?
        // Let's check which ones are already selected in our Set
        // If we want cross-page selection, we keep the Set.

        tableBody.innerHTML = users
            .map((u) => {
                const isChecked = selectedIds.has(u.id);
                return `
            <tr class="group hover:bg-white/5 transition-colors">
                <td class="p-4 text-center">
                    <input type="checkbox" class="user-select rounded bg-zinc-800 border-zinc-700 text-red-600 focus:ring-red-600 focus:ring-offset-zinc-900 cursor-pointer" value="${u.id}" ${isChecked ? "checked" : ""}>
                </td>
                <td class="p-4 text-zinc-500 text-center font-mono text-xs">#${u.id}</td>
                <td class="p-4">
                    <div class="flex justify-center items-center">
                        <img src="${u.avatar || "https://ui-avatars.com/api/?name=" + u.name}" 
                             class="w-8 h-8 rounded-full bg-zinc-800 object-cover ring-2 ring-transparent group-hover:ring-white/10 transition-all" 
                             onerror="this.src='https://ui-avatars.com/api/?name=User'">
                    </div>
                </td>
                <td class="p-4 font-medium text-white whitespace-nowrap">${u.name || "Unknown"}</td>
                <td class="p-4 text-zinc-400 whitespace-nowrap">${u.email}</td>
                <td class="p-4 text-center">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                        ${
                            u.provider === "google"
                                ? "bg-blue-500/10 text-blue-400 border border-blue-500/20"
                                : "bg-zinc-700/50 text-zinc-300 border border-zinc-700"
                        }">
                        ${u.provider || "local"}
                    </span>
                </td>
                <td class="p-4 text-zinc-500 text-center text-xs whitespace-nowrap">
                    ${new Date(u.created_at).toLocaleDateString(undefined, { year: "numeric", month: "short", day: "numeric" })}
                </td>
                <td class="p-4">
                    ${
                        u.last_watch
                            ? `<div class="flex flex-col max-w-[150px]">
                             <span class="text-white text-xs font-medium truncate" title="${u.last_watch.drama_title}">${u.last_watch.drama_title}</span>
                             <span class="text-[10px] text-zinc-500">Ep ${u.last_watch.episode} â€¢ ${new Date(u.last_watch.updated_at).toLocaleDateString(undefined, { month: "short", day: "numeric" })}</span>
                           </div>`
                            : '<span class="text-zinc-700 text-xs italic">No history</span>'
                    }
                </td>
                <td class="p-4 text-right">
                    <button onclick="deleteUser(${u.id})" class="p-2 text-zinc-500 hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-colors" title="Delete User">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                    </button>
                </td>
            </tr>
        `;
            })
            .join("");

        // Re-attach listener for new row checkboxes
        document.querySelectorAll(".user-select").forEach((cb) => {
            cb.addEventListener("change", (e: any) => {
                const id = parseInt(e.target.value);
                if (e.target.checked) selectedIds.add(id);
                else selectedIds.delete(id);
                updateSelectionUI();
            });
        });

        // Update "Select All" state based on if all visible rows are checked
        // optional but nice
    }

    document.getElementById("btn-prev")?.addEventListener("click", () => {
        if (currentPage > 1) fetchUsers(currentPage - 1);
    });

    document.getElementById("btn-next")?.addEventListener("click", () => {
        fetchUsers(currentPage + 1);
    });

    fetchUsers();

    // Listen for realtime updates from other tabs
    window.addEventListener("storage", (e) => {
        if (e.key === "last_watch_update") {
            fetchUsers(currentPage);
        }
    });
</script>
