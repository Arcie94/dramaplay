---
import Layout from "../../layouts/Layout.astro";

const { id } = Astro.params;

// Fetch Detail
const API_URL = import.meta.env.INTERNAL_API_URL || "http://localhost:3000/api";
const res = await fetch(`${API_URL}/detail?bookId=${id}`);
const json = await res.json();

if (json.status !== "success") {
    return Astro.redirect("/404");
}

const drama = json;
const episodes = json.episodes || [];

// Fetch Settings (Logo)
let siteLogo = "/favicon.png";
try {
    const settingsRes = await fetch(`${API_URL}/settings?t=${Date.now()}`);
    if (settingsRes.ok) {
        const settingsData = await settingsRes.json();
        if (settingsData.site_logo) {
            siteLogo = settingsData.site_logo;
        }
    }
} catch (e) {
    console.error("Error fetching settings:", e);
}

const schema = JSON.stringify({
    "@context": "https://schema.org",
    "@type": "TVSeries",
    name: drama.judul,
    description: drama.deskripsi,
    image: drama.cover,
    numberOfEpisodes: episodes.length,
    aggregateRating: {
        "@type": "AggregateRating",
        ratingValue: "4.8",
        ratingCount: drama.likes || 100,
    },
});
---

<Layout title={`${drama.judul} - DramaPlay`}>
    <!-- Top Nav with Back Button and Transparent bg -->
    <nav
        class="fixed top-0 z-30 flex w-full items-center justify-between p-4 bg-gradient-to-b from-black/80 to-transparent"
    >
        <a
            href="/"
            class="rounded-full bg-black/40 p-2 text-white backdrop-blur-md"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2.5"
                stroke="currentColor"
                class="h-6 w-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15.75 19.5L8.25 12l7.5-7.5"></path>
            </svg>
        </a>
        <div class="flex gap-4">
            <button
                id="share-btn"
                class="rounded-full bg-black/40 p-2 text-white backdrop-blur-md hover:bg-black/60 transition-colors"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    class="w-6 h-6"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5"
                    ></path>
                </svg>
            </button>
        </div>
    </nav>
</Layout>

<!-- JSON-LD -->
<script type="application/ld+json" set:html={schema} />

<div class="relative w-full">
    <!-- Background Cover Blurry -->
    <div class="absolute inset-0 h-[50vh] overflow-hidden">
        <img
            src={drama.cover}
            class="h-full w-full object-cover blur-xl opacity-50"
        />
        <div
            class="absolute inset-0 bg-gradient-to-b from-transparent via-zinc-950/80 to-zinc-950"
        >
        </div>
    </div>

    <!-- Main Content -->
    <div class="relative z-10 px-4 pt-24 pb-10">
        <div class="flex gap-4 mb-6">
            <!-- Cover Image -->
            <img
                src={drama.cover}
                class="w-32 rounded-lg shadow-2xl aspect-[3/4] object-cover"
            />

            <!-- Info -->
            <div class="flex-1 flex flex-col justify-end pb-2">
                <h1 class="text-2xl font-bold text-white leading-tight mb-2">
                    {drama.judul}
                </h1>
                <div class="flex items-center gap-2 text-xs text-zinc-400 mb-4">
                    <span
                        class="px-2 py-0.5 border border-zinc-700 rounded text-zinc-300"
                        >Drama</span
                    >
                    <span>{drama.likes} Likes</span>
                    <span>â€¢</span>
                    <span>{drama.total_episode}</span>
                </div>

                <a
                    href={`/watch/${id}/1`}
                    class="w-full bg-red-600 text-white font-bold py-3 rounded-full flex items-center justify-center gap-2 shadow-lg shadow-red-900/40 active:scale-95 transition-transform"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        class="w-5 h-5"
                    >
                        <path d="M8 5v14l11-7z"></path>
                    </svg>
                    Play Ep 1
                </a>
            </div>
        </div>

        <!-- Description -->
        <div class="mb-8">
            <h3 class="font-bold text-white mb-2">Synopsis</h3>
            <p
                class="text-sm text-zinc-400 leading-relaxed line-clamp-3 visited:line-clamp-none"
            >
                {drama.deskripsi}
            </p>
        </div>

        <!-- Episodes Grid -->
        <div>
            <div class="flex justify-between items-center mb-4">
                <h3 class="font-bold text-white">Episodes</h3>
                <span class="text-xs text-zinc-500"
                    >{episodes.length} Available</span
                >
            </div>

            <div class="grid grid-cols-5 gap-3">
                {
                    episodes.map((ep: any) => (
                        <a
                            href={`/watch/${id}/${ep.episode_index + 1}`}
                            class="aspect-square bg-zinc-800 rounded-lg flex items-center justify-center text-zinc-300 font-medium hover:bg-zinc-700 active:bg-red-600 active:text-white transition-colors"
                        >
                            {ep.episode_index + 1}
                        </a>
                    ))
                }
            </div>
        </div>

        <!-- Comments Section -->
        <div class="mt-10 pt-8 border-t border-zinc-900">
            <h3 class="font-bold text-white mb-4">Discussion</h3>
            <div class="min-h-[200px] bg-black/20 rounded-xl p-4">
                <script
                    src="https://giscus.app/client.js"
                    data-repo="teddyayomi/dramabang-comments"
                    data-repo-id="R_kgDOL8_x9A"
                    data-category="General"
                    data-category-id="DIC_kwDOL8_x9M4Cfaqi"
                    data-mapping="pathname"
                    data-strict="0"
                    data-reactions-enabled="1"
                    data-emit-metadata="0"
                    data-input-position="top"
                    data-theme="dark"
                    data-lang="id"
                    data-loading="lazy"
                    crossorigin="anonymous"
                    async></script>
                <noscript
                    >Please enable JavaScript to view the <a
                        href="https://giscus.app">comments powered by Giscus.</a
                    ></noscript
                >
            </div>
            <p class="text-[10px] text-zinc-700 mt-4 text-center">
                Powered by Giscus. Admin: Configure repo in <code
                    >detail/[id].astro</code
                >.
            </p>
        </div>
    </div>
</div>

<!-- Toast Notification -->
<div
    id="toast"
    class="fixed bottom-24 left-1/2 -translate-x-1/2 bg-white/90 text-black px-4 py-2 rounded-full shadow-lg opacity-0 pointer-events-none transition-opacity duration-300 z-50 text-sm font-bold flex items-center gap-2"
>
    <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        class="w-4 h-4 text-green-600"
    >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4.5 12.75l6 6 9-13.5"></path>
    </svg>
    <span>Link Copied!</span>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const shareBtn = document.getElementById("share-btn");
        const toast = document.getElementById("toast");

        if (shareBtn) {
            shareBtn.addEventListener("click", async () => {
                const shareData = {
                    title: document.title,
                    text: "Check out this drama on DramaPlay!",
                    url: window.location.href,
                };

                try {
                    if (navigator.share) {
                        await navigator.share(shareData);
                    } else {
                        // Fallback
                        await navigator.clipboard.writeText(
                            window.location.href,
                        );
                        showToast();
                    }
                } catch (err) {
                    console.error("Share failed:", err);
                }
            });
        }

        function showToast() {
            if (toast) {
                toast.classList.remove("opacity-0");
                setTimeout(() => {
                    toast.classList.add("opacity-0");
                }, 2000);
            }
        }
    });
</script>
