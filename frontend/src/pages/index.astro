  .text-shadow {
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }
  .pb-safe {
    padding-bottom: env(safe-area-inset-bottom, 20px);
  }
</style>

<script is:inline>
  // Client-Side Fetching Logic (Skeleton Loading)
  document.addEventListener("DOMContentLoaded", () => {
    // --- Templates ---
    const renderDramaCard = (drama, cls = "") => {
      // Provider Logic
      let providerColor = "bg-red-600";
      let providerLabel = "DB";
      if (drama.bookId && drama.bookId.startsWith("melolo:")) {
        providerColor = "bg-purple-600";
        providerLabel = "MELOLO";
      } else if (drama.bookId && drama.bookId.startsWith("netshort:")) {
        providerColor = "bg-blue-600";
        providerLabel = "NETSHORT";
      } else if (drama.bookId && drama.bookId.startsWith("dramabox:")) {
        providerColor = "bg-red-600";
        providerLabel = "DRAMABOX";
      }

      return `
            <div class="${cls}">
                <a href="/detail/${drama.bookId}" class="group relative block w-full aspect-[2/3] rounded-lg overflow-hidden bg-zinc-900 shadow-md">
                    <img 
                        src="${drama.cover}" 
                        alt="${drama.judul}" 
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        loading="lazy"
                        onerror="this.closest('.group').style.display='none'"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
                    
                    <!-- Provider Badge -->
                    <div class="absolute top-2 left-2 z-10 px-1.5 py-0.5 rounded text-[9px] font-bold text-white shadow-md ${providerColor} border border-white/10">
                        ${providerLabel}
                    </div>

                    <div class="absolute top-2 right-2 px-1.5 py-0.5 bg-black/60 rounded text-[10px] font-bold text-white border border-white/10 backdrop-blur-sm">
                        ${drama.total_episode} Eps
                    </div>
                    <div class="absolute bottom-0 left-0 right-0 p-3">
                        <h3 class="text-white text-sm font-bold line-clamp-2 leading-snug group-hover:text-red-500 transition-colors">
                            ${drama.judul}
                        </h3>
                    </div>
                </a>
            </div>
          `;
    };

    const renderHeroItem = (item, index) => {
      // Provider Logic
      let providerColor = "bg-red-600";
      let providerLabel = "DB";
      if (item.bookId && item.bookId.startsWith("melolo:")) {
        providerColor = "bg-purple-600";
        providerLabel = "MELOLO";
      } else if (item.bookId && item.bookId.startsWith("netshort:")) {
        providerColor = "bg-blue-600";
        providerLabel = "NETSHORT";
      } else if (item.bookId && item.bookId.startsWith("dramabox:")) {
        providerColor = "bg-red-600";
        providerLabel = "DRAMABOX";
      }

      return `
          <div class="relative w-full h-full flex-shrink-0 snap-center bg-zinc-950 overflow-hidden">
            <div class="absolute inset-0">
              <img
                src="${item.cover}"
                alt="Background"
                class="h-full w-full object-cover opacity-60 blur-2xl scale-125 select-none"
                loading="${index === 0 ? "eager" : "lazy"}"
              />
              <div class="absolute inset-0 bg-gradient-to-r from-zinc-950 via-zinc-950/80 to-transparent"></div>
              <div class="absolute inset-0 bg-gradient-to-t from-zinc-950 via-zinc-950/50 to-transparent"></div>
            </div>

            <div class="relative w-full h-full container mx-auto px-6 md:px-12 flex items-center">
              <div class="flex flex-col-reverse md:grid md:grid-cols-12 gap-6 md:gap-8 w-full items-center h-full md:h-auto justify-center">
                <div class="w-full md:col-span-7 flex flex-col justify-end md:justify-center items-start z-20 pb-12 md:pb-0">
                  <div class="hidden md:block bg-red-600/20 text-red-500 text-xs font-bold px-3 py-1 rounded-full mb-4 border border-red-500/20 backdrop-blur-sm">
                    FEATURED DRAMA
                  </div>
                  <h2 class="text-3xl md:text-5xl lg:text-6xl font-black text-white mb-2 md:mb-4 leading-tight tracking-tight drop-shadow-lg line-clamp-1">
                    ${item.judul}
                  </h2>
                  <p class="text-zinc-200 text-sm md:text-lg mb-6 md:mb-8 line-clamp-2 max-w-2xl leading-relaxed drop-shadow-md text-shadow-sm">
                    ${item.deskripsi}
                  </p>

                  <div class="flex gap-3 md:gap-4 w-full md:w-auto">
                    <a
                      href="/detail/${item.bookId}"
                      class="hero-watch-btn flex-1 md:flex-none justify-center group flex items-center gap-2 md:gap-3 bg-red-600 text-white px-4 md:px-8 py-3.5 md:py-3.5 rounded-xl font-bold text-sm md:text-base shadow-xl shadow-red-900/40 hover:bg-red-700 hover:scale-105 transition-all duration-300"
                      data-id="${item.bookId}"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 group-hover:animate-pulse">
                        <path fill-rule="evenodd" d="M4.5 5.653c0-1.426 1.529-2.33 2.779-1.643l11.54 6.348c1.295.712 1.295 2.573 0 3.285L7.28 19.991c-1.25.687-2.779-.217-2.779-1.643V5.653z" clip-rule="evenodd" />
                      </svg>
                      Watch Now
                    </a>
                    <button 
                        class="hero-mylist-btn flex-1 md:flex-none justify-center flex items-center gap-2 px-4 md:px-6 py-3.5 md:py-3.5 rounded-xl font-semibold text-white bg-white/10 border border-white/20 hover:bg-white/20 transition-all backdrop-blur-md text-sm md:text-base shadow-lg"
                        data-id="${item.bookId}"
                        data-title="${item.judul}"
                        data-cover="${item.cover}"
                        data-episodes="${item.total_episode}"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0111.186 0z" />
                      </svg>
                      My List
                    </button>
                  </div>
                </div>

                <div class="w-full md:col-span-5 flex justify-center items-center relative z-10 pt-8 md:pt-0">
                  <div class="relative w-[240px] md:w-[300px] aspect-[2/3] transform transition-transform hover:scale-105 duration-500 shadow-2xl">
                    <div class="absolute inset-x-4 top-4 bottom-0 bg-black/50 blur-xl rounded-2xl"></div>
                    <div class="absolute top-3 left-3 z-20 px-2 py-1 rounded-md text-[10px] font-bold text-white shadow-lg ${providerColor} border border-white/20">
                        ${providerLabel}
                    </div>
                    <img
                      src="${item.cover}"
                      alt="${item.judul}"
                      class="relative h-full w-full object-cover rounded-xl md:rounded-2xl shadow-[0_10px_30px_rgba(0,0,0,0.5)] border border-white/10 ring-1 ring-white/20"
                      loading="${index === 0 ? "eager" : "lazy"}"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
          `;
    };

    // --- Fetchers ---

    // 1. Trending (Feeds Hero fallback + Trending Strip)
    fetch("/api/trending?t=" + Date.now())
      .then((res) => res.json())
      .then((res) => {
        const data = res.data || [];
        const trendingContainer = document.getElementById("trending-carousel");

        if (data.length > 0) {
          // Render Trending Strip
          if (trendingContainer) {
            trendingContainer.innerHTML = data
              .slice(0, 10)
              .map((d, i) =>
                renderDramaCard(
                  d,
                  "min-w-[140px] w-[140px] md:min-w-[calc(20%-13px)] md:w-[calc(20%-13px)] snap-start shrink-0 transition-all duration-300"
                )
              )
              .join("");

            // Initialize Auto-Slide (from existing script scope)
            if (window.setupTrendingCarousel) window.setupTrendingCarousel();
          }
        }
      })
      .catch((e) => console.error("Trending fetch failed", e));

    // 2. Hero
    fetch("/api/hero?t=" + Date.now())
      .then((res) => res.json())
      .then((res) => {
        const data = res.data;
        const list = Array.isArray(data) ? data : data ? [data] : [];
        const mount = document.getElementById("hero-mount");

        if (list.length > 0 && mount) {
          mount.innerHTML = `
                      <div id="hero-carousel" class="flex w-full h-full overflow-x-auto snap-x snap-mandatory no-scrollbar">
                         ${list.map(renderHeroItem).join("")}
                      </div>
                      ${
                        list.length > 1
                          ? `
                         <div class="absolute bottom-4 right-4 flex gap-2">
                             ${list.map((_, i) => `<div class="w-2 h-2 rounded-full bg-white/50" data-hero-index="${i}"></div>`).join("")}
                         </div>
                      `
                          : ""
                      }
                  `;

          // Initialize Logic
          if (window.setupHeroCarousel) window.setupHeroCarousel();
          if (window.initHeroMyList) window.initHeroMyList();
          if (window.initHeroResume) window.initHeroResume();
        }
      })
      .catch((e) => console.error("Hero fetch failed", e));

    // 3. Latest
    fetch("/api/latest?t=" + Date.now())
      .then((res) => res.json())
      .then((res) => {
        const data = res.data || [];
        const container = document.getElementById("latest-grid");
        if (container && data.length > 0) {
          container.innerHTML = data.map((d) => renderDramaCard(d)).join("");
        }
      });

    // 4. Random / Recommended
    fetch("/api/random")
      .then((res) => res.json())
      .then((res) => {
        const data = res.data || [];
        const container = document.getElementById("random-grid");
        const section = document.getElementById("random-section");
        if (container && data.length > 0 && section) {
          section.classList.remove("hidden");
          container.innerHTML = data.map((d) => renderDramaCard(d)).join("");
        }
      });

    // 5. New Movies (Provider: movie)
    fetch("/api/latest?provider=movie&t=" + Date.now())
      .then((res) => res.json())
      .then((res) => {
        const data = res.data || [];
        const container = document.getElementById("movies-grid");
        const section = document.getElementById("movies-section");

        if (container && data.length > 0 && section) {
          section.classList.remove("hidden");
          // Reuse renderDramaCard logic or similar portrait style
          container.innerHTML = data
            .map(
              (d) => `
            <div class="min-w-[140px]">
                <a href="/detail/${d.bookId}" class="group relative block w-full aspect-[2/3] rounded-lg overflow-hidden bg-zinc-900 shadow-md">
                    <img 
                        src="${d.cover}" 
                        alt="${d.judul}" 
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                        loading="lazy"
                        onerror="this.closest('div').style.display='none'"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
                    
                    <!-- Provider Badge -->
                    <div class="absolute top-2 left-2 z-10 px-1.5 py-0.5 rounded text-[9px] font-bold text-white shadow-md bg-green-600 border border-white/10">
                        MOVIE
                    </div>

                    <div class="absolute bottom-0 left-0 right-0 p-3">
                        <h3 class="text-white text-sm font-bold line-clamp-2 leading-snug group-hover:text-red-500 transition-colors">
                            ${d.judul}
                        </h3>
                    </div>
                </a>
            </div>
          `
            )
            .join("");
        }
      })
      .catch((e) => console.error("Movies fetch failed", e));

    // 6. Genres (Romance & Action)
    const genres = [
      { id: "romance", query: "Modern Romance & CEO" },
      { id: "action", query: "Martial Arts Action" },
    ];

    genres.forEach((g) => {
      fetch(`/api/random?genre=${encodeURIComponent(g.query)}`)
        .then((res) => res.json())
        .then((res) => {
          const data = res.data || [];
          const container = document.getElementById(`${g.id}-grid`);
          const section = document.getElementById(`${g.id}-section`);
          if (container && data.length >= 6 && section) {
            section.classList.remove("hidden");
            container.innerHTML = data.map((d) => renderDramaCard(d)).join("");
          }
        });
    });
  });

  // Expose Setup Functions Globally so we can call them after fetch
  window.setupHeroCarousel = null; // Will be assigned by existing script
</script>
