---
import LoginLock from "../components/LoginLock.astro";
import Layout from "../layouts/Layout.astro";
import DramaCard from "../components/DramaCard.astro";

// Fetch Data from Backend
const API_URL = process.env.INTERNAL_API_URL || "http://localhost:3000/api";
console.log(`[SSR] Fetching data from: ${API_URL}`);

const safeFetch = async (endpoint: string, fallback: any = []) => {
  try {
    const res = await fetch(`${API_URL}${endpoint}`);
    if (!res.ok) throw new Error(`HTTP ${res.status}`);
    const json = await res.json();
    return json.data || fallback;
  } catch (e) {
    console.error(`[SSR] Error fetching ${endpoint}:`, e);
    return fallback;
  }
};

// Parallel Fetches
const [trending, rawHeroData, latest, randomData, romanceData, actionData] =
  await Promise.all([
    safeFetch("/trending", []),
    safeFetch("/hero", {}),
    safeFetch("/latest", []),
    safeFetch("/random", []),
    safeFetch(
      `/random?genre=${encodeURIComponent("Modern Romance & CEO")}`,
      []
    ),
    safeFetch(`/random?genre=${encodeURIComponent("Martial Arts Action")}`, []),
  ]);

// Process Hero
const rawHeroList = Array.isArray(rawHeroData)
  ? rawHeroData
  : rawHeroData
    ? [rawHeroData]
    : [];
const heroList =
  rawHeroList.length > 0
    ? rawHeroList
    : trending.length > 0
      ? [trending[0]]
      : [];

const random = randomData;
const romance = romanceData;
const action = actionData;

export const prerender = false;

// Fetch Settings (Logo)
let siteLogo = "/favicon.png";
try {
  const settingsRes = await fetch(`${API_URL}/settings?t=${Date.now()}`);
  if (settingsRes.ok) {
    const settingsData = await settingsRes.json();
    if (settingsData.site_logo) {
      siteLogo = settingsData.site_logo;
    }
  }
} catch (e) {
  console.error(`[SSR] Error fetching settings:`, e);
}
